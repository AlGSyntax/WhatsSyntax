<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="?attr/selectableItemBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<ImageView
android:id="@+id/imageView_profile"
android:layout_width="40dp"
android:layout_height="40dp"
android:layout_marginEnd="16dp"
android:src="@drawable/pp_01"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintTop_toTopOf="parent"
app:layout_constraintBottom_toBottomOf="parent" />

<TextView
android:id="@+id/textView_contact_name"
android:layout_width="0dp"
android:layout_height="wrap_content"
android:text="Kontaktname"
android:layout_marginEnd="8dp"
app:layout_constraintStart_toEndOf="@id/imageView_profile"
app:layout_constraintTop_toTopOf="@id/imageView_profile"
app:layout_constraintEnd_toEndOf="parent" />

<TextView
android:id="@+id/textView_last_message"
android:layout_width="0dp"
android:layout_height="wrap_content"
android:text="Letzte Nachricht"
app:layout_constraintStart_toStartOf="@id/textView_contact_name"
app:layout_constraintTop_toBottomOf="@id/textView_contact_name"
app:layout_constraintEnd_toEndOf="@id/textView_contact_name" />

    </androidx.constraintlayout.widget.ConstraintLayout>

